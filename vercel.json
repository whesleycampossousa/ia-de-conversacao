{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "audio_cache/lessons/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/audio_cache/lessons/(.*)",
      "dest": "/audio_cache/lessons/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400, s-maxage=0"
      }
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}
